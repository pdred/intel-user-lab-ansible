option domain-name "lab.com";
default-lease-time 600;
max-lease-time 7200;

subnet 192.168.10.0 netmask 255.255.255.0 {
    range 192.168.10.100 10.10.10.254;
    option routers 10.10.10.1;
    option subnet-mask 255.255.255.0;
    option domain-name-servers 192.168.10.2;
    option ntp-servers 192.168.10.2;

    host infra {
        hardware ethernet 6c:fe:54:4a:ea:21;
        fixed-address 192.168.10.2;
    }

    host master {
        hardware ethernet 6c:fe:54:4a:e9:81;
        fixed-address 192.168.10.3;
    }

    host worker {
        hardware ethernet b8:3f:d2:4a:56:de;
        fixed-address 192.168.10.4;
    }
}

$TTL 604800     ; Default Time To Live
@       IN      SOA     infra.lab.com. admin.lab.com. (
              3           ; Serial
         604800           ; Refresh
          86400           ; Retry
        2419200           ; Expire
         604800 )         ; Negative Cache TTL
;
; Name servers
@       IN      NS      infra.lab.com.

; A records for domain hosts
infra IN  A   192.168.10.2
master IN A   192.168.10.3
worker IN A   192.168.10.4

; Cname records
masternode   CNAME  infra.lab.com.

; OpenShift Records
api.ocp         IN   A  10.10.10.3
api-int.ocp     IN   A  10.10.10.3
*.apps.ocp      IN   A  10.10.10.3
